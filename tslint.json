{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**"
        ]
    },
    "rules": {
        "align": [
            true,
            "parameters",
            "arguments",
            "members",
            "elements"
        ],
        "arrow-parens": false,
        "forin": false,
        "indent": [
            true,
            "spaces",
            2
        ],
        "interface-name": false,
        "member-access": false,
        "no-consecutive-blank-lines": false,
        "no-reference": false,
        "no-string-literal": false,
        "ordered-imports": false,
        "object-literal-sort-keys": false,
        "only-arrow-functions": false,
        "quotemark": false,
        "semicolon": false,
        "space-before-function-paren": false,
        "trailing-comma": false,
        "member-ordering": false,
        "ban-types": false,
        "whitespace": [
            true,
            "check-branch",
            "check-operator",
            "check-typecast"
        ],
        "variable-name": false,
        "object-literal-shorthand": false,
        "prefer-for-of": false,
        "no-console": false,
        "noImplicitAny": false
    }
}